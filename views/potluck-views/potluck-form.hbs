<h2>Create a Potluck</h2>

{{!-- always method="POST" & enctype="multipart/form-data" for file uploads --}}
<form method="POST" action="/process-potlucks" enctype="multipart/form-data">
    <label>
        Name:
        <input type="text" name="name" placeholder="My super birthday party!">
    </label>
    <br>

    <label>
        Location:
        <input type="text" class="location-input" name="location" placeholder="666, Unicorn Street">
    </label>
    <br>

    <input type="hidden" name="latitude" class="lat-input" />
    <input type="hidden" name="longitude" class="long-input" />

    <label>
        Date:
        <input type="date" name="date">
    </label>
    <br>

    <label>
        Picture:
        <input type="file" name="pictureUpload">
    </label>
    <br>

    <button>Save This Potluck</button>
</form>