<h2>Your Potlucks</h2>

<div class="row">
    {{#if potluckArrayHost}} {{#each potluckArrayHost}}
    <div class="col-sm-3">
        <div class="card text-center">
            <img class="card-img-top" src="{{this.pictureUrl}}" style="height: 180px; width: 100%">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <a href="/potlucks/{{this._id}}" class="btn btn-primary">See Potluck</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>You don't have any potlucks yet</p>
    {{/each}} {{/if}}
    <div class="col-sm-3">
        <div class="card text-center">
            <img class="card-img-top" src="/images/+.gif" style="height: 180px; width: 100%">
            <div class="card-body">
                <h5 class="card-title">New Potluck</h5>
                <a href="/potlucks/create" class="btn btn-primary">Create a Potluck</a>
            </div>
        </div>
    </div>
</div>
