<h2>Edit {{potluckItem.name}}</h2>

<div class="edit">
    <form method="POST" action="/process-edit/{{potluckItem._id}}" enctype="multipart/form-data">
        <label>
            Name:
            <input type="text" name="name" placeholder="My super birthday party!" value="{{potluckItem.name}}">
        </label>
        <br>

        <label>
            Location:
            <input type="text" class="location-input" name="location" value="{{potluckItem.location}}">
        </label>
        <br>

        <input type="hidden" name="latitude" class="lat-input" />
        <input type="hidden" name="longitude" class="long-input" />

        <label>
            Date:
            <input type="date" name="date" value="{{potluckItem.date}}">
        </label>
        <br>

        <label>
            Picture URL:
            <input type="file" name="pictureUpload">
        </label>
        <br>

        <button>Save Changes</button>
    </form>

    <form action="/potlucks/{{potluckItem._id}}/delete" method="POST">
        <button>Delete this potluck</button>
    </form>

</div>